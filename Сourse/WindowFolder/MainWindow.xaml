<Window x:Class="Сourse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Сourse"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Текстиль" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Border Background="#CEB49B" CornerRadius="0 100 0 0">
                <Image Style="{StaticResource LogoAuzhorization}" Height="100">
                    <Image.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="4" RenderingBias="Performance" Direction="300" BlurRadius="4" Opacity="0.2"/>
                    </Image.Effect>
                </Image>
            </Border>
        </Grid>
    </Grid>
</Window>
