<Page x:Class="Сourse.Pages.PageVerification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse.Pages"
      mc:Ignorable="d" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="700" d:DesignWidth="600"
      Title="PageVerification">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Image Style="{StaticResource LogoAuzhorization}"/>
            <TextBlock Text="Введите код присланный вам на почту" FontSize="24" 
                       TextAlignment="Center"
                       Width="300"
                       TextWrapping="Wrap"/>
            <TextBox materialDesign:HintAssist.Hint="Код" FontSize="24"
                     Name="TxbCode"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            
            <Button Content="Готово"  Name="BtnReg" Click="BtnReg_Click"
                    Style="{StaticResource Main}"/>

            <TextBlock Text="Назад" Style="{StaticResource Second}"
                        Name="TbBack" MouseUp="TbBack_MouseUp"/>
        </StackPanel>
        
    </Grid>
</Page>
