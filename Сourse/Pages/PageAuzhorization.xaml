<Page x:Class="Сourse.Pages.PageAuzhorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сourse.Pages"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="700" d:DesignWidth="600"
      Title="PageAuzhorization">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="300">
            <Image Style="{StaticResource LogoAuzhorization}" />
            <TextBlock Text="Авторизация" FontSize="30" TextAlignment="Center"/>
            <TextBox materialDesign:HintAssist.Hint="Логин" FontSize="20" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <PasswordBox materialDesign:HintAssist.Hint="Пароль" FontSize="20" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Cursor="Arrow"/>
            <Button Content="Войти" Name="BtnSign" Click="BtnSign_Click"
                    Style="{StaticResource Main}"/>

            <TextBlock Text="Зарегистрироваться" Style="{StaticResource Second}"
                        Name="TbReg" MouseUp="TbReg_MouseUp"/>
        </StackPanel>
    </Grid>
</Page>
